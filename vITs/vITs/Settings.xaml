                </TabItem.Background>
                <Grid Background="#FFE5E5E5" Margin="0,-3,0,3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="77*"/>
                        <ColumnDefinition Width="479*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Tfn:" HorizontalAlignment="Left" Margin="95,58,0,0" VerticalAlignment="Top" Grid.Column="1" RenderTransformOrigin="1.414,0.615"/>
